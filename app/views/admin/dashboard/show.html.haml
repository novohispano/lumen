.container-fluid.dashboard
  .col-md-12
    %h2 Administrador de Lumen
    %hr
    .col-md-6.dashboard-box
      %span.glyphicon.glyphicon-eye-open{"aria-hidden" => "true"}
      %h4
        = link_to 'Destacados', admin_highlights_path
      %hr
      %p #{@highlights.count} Destacados
      = link_to 'Crear Proyecto', new_admin_project_path, class: 'btn btn-default'
    .col-md-6.dashboard-box
      %span.glyphicon.glyphicon-globe{"aria-hidden" => "true"}
      %h4
        = link_to 'Proyectos', admin_projects_path
      %hr
      %p #{@projects.count} Proyectos
      = link_to 'Crear Proyecto', new_admin_project_path, class: 'btn btn-default'
    .col-md-6.dashboard-box
      %span.glyphicon.glyphicon-file{"aria-hidden" => "true"}
      %h4
        = link_to 'Noticias', admin_news_index_path
      %hr
      %p #{@news.count} Noticias
      = link_to 'Crear Noticia', new_admin_news_path, class: 'btn btn-default'
    .col-md-6.dashboard-box
      %span.glyphicon.glyphicon-picture{"aria-hidden" => "true"}
      %h4
        = link_to 'Fotos', admin_photos_path
      %hr
      %p #{@photos.count} Fotos
      = link_to 'Crear Foto', new_admin_photo_path, class: 'btn btn-default'
    .col-md-6.dashboard-box
      %span.glyphicon.glyphicon-user{"aria-hidden" => "true"}
      %h4
        = link_to 'Usuarios', admin_users_path
      %hr
      %p #{@users.count} Usuarios
      = link_to 'Crear Usuario', new_admin_user_path, class: 'btn btn-default'
