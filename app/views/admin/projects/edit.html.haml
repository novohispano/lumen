.container-fluid
  .col-md-2
  .col-md-8
    %h2 Editar Proyecto
    %hr
    = form_for @project, url: admin_project_path(@project) do |f|
      .form-group
        = f.label 'Nombre'
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label 'Descripción (500 Caracteres Máximo)'
        = f.text_area :description, class: 'form-control'
      .form-group
        = f.label 'Dirección'
        = f.text_field :address, class: 'form-control'
      .form-group
        = f.label 'Número de Beneficiarios'
        = f.number_field :beneficiaries, class: 'form-control'
      .form-group
        = f.label :home do
          %p
            = f.check_box :home
            Mostrar en Página de Inicio (3 Proyectos Máximo)
      .form-group
      = f.submit 'GUARDAR PROYECTO', class: 'btn btn-default'
  .col-md-8
