.container-fluid
  .col-md-2
  .col-md-8
    %h2 Usuarios
    = link_to 'CREAR USUARIO', new_admin_user_path, class: 'btn btn-sm btn-default'
    %hr
    %table.table.table-hover.table-striped.table-bordered
      %tr
        %th ID
        %th EMAIL
        %th FECHA DE CREACIÓN
        %th
      - @users.each do |user|
        %tr
          %td
            = user.id
          %td
            = user.email
          %td
            = format_time(user.created_at)
          %td
            .btn-group
              = link_to 'EDITAR', edit_admin_user_path(user.id), class: 'btn btn-default btn-xs'
              = link_to 'ELIMINAR', admin_user_path(user.id), method: :delete, data: { confirm: "Esto eliminará al usuario #{user.email} permanentemente. ¿Estás seguro de realizar esta acción?" }, class: 'btn btn-default btn-xs'
  .col-md-8
