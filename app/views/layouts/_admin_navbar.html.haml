.admin-navbar
  %nav.navbar.navbar-default{role:  "navigation"}
    .container-fluid
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type:  "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: admin_path} ADMIN LUMEN
      / Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          %li
            = highlight_navbar_link('DASHBOARD', admin_path, request.path)
          %li
            = highlight_navbar_link('PROYECTOS', admin_projects_path, request.path)
          %li
            = highlight_navbar_link('NOTICIAS', admin_news_index_path, request.path)
          %li
            = highlight_navbar_link('FOTOS', admin_photos_path, request.path)
          %li
            = highlight_navbar_link('USUARIOS', admin_users_path, request.path)
          %li
            = link_to 'SALIR', admin_logout_path, method: :delete
