.site-navbar
  %nav.navbar.navbar-default{role:  'navigation'}
    .container-fluid
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle.collapsed{'data-target' => '#bs-example-navbar-collapse-1', 'data-toggle' => 'collapse', type:  'button'}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: root_path}
          %img.navbar-brand{alt: 'Proyecto Lumen', src: image_url('logo.jpg')}
      / Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          %li
            = highlight_navbar_link('INICIO', root_path, request.path)
          %li
            = highlight_navbar_link('PROYECTOS', projects_path, request.path)
          %li
            = highlight_navbar_link('NOTICIAS', news_index_path, request.path)
          %li
            %a{href: '#'} CONTACTO
