#carousel-lumen.carousel.slide{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    - @photos.count.times do |i|
      - if i == 0
        %li.active{"data-slide-to" => "#{i}", "data-target" => "#carousel-lumen"}
      - else
        %li{"data-slide-to" => "#{i}", "data-target" => "#carousel-lumen"}

  / Wrapper for slides
  .carousel-inner{role: "listbox"}
    - @photos.each_with_index do |photo, index|
      - if index == 0
        .item.active
          %img{alt: "Proyecto Lumen", src: image_url("#{photo.file.url(:large)}")}
            .carousel-caption.lumen
              %h1= photo.description
      - else
        .item
          %img{alt: "Proyecto Lumen", src: image_url("#{photo.file.url(:large)}")}
            .carousel-caption.lumen
              %h1= photo.description

  / Controls
  %a.left.carousel-control{"data-slide" => "prev", href: "#carousel-lumen", role: "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide" => "next", href: "#carousel-lumen", role: "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only Next

.container-fluid.metrics
  - @metrics.each do |metric|
    .col-sm-4
      %h3
        = metric.try(:title)
      %p
        = metric.try(:description)

.container-fluid.historia
  .col-sm-2
  .col-sm-8
    %h2
      = @history.try(:title)
    %hr
    %p
      = @history.try(:description)
  .col-sm-2

.container-fluid.proyectos
  .col-sm-12
    %h2 PROYECTOS
    %hr
  - @projects.each do |project|
    .col-sm-4
      %h3= project.name
      %p=  project.description

.container-fluid.contacto
  .col-sm-2
  .col-sm-8
    %h2 CONTACTO
    %hr
    %p Si quieres trabajar con nosotros, realizar tu pasantía, proponer a tu comunidad o realizar una donación, da click aquí.
    %p.btn-contacto= link_to 'ENVIAR MENSAJE', contact_path, class: 'btn btn-default btn-lg'
  .col-sm-2
